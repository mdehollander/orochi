{
  "extends": [
    "config:base"
  ],
  "ignorePaths": [],
  "reviewersFromCodeOwners": "true",
  "labels": [
    "renovate",
    "dependencies"
  ],
  "regexManagers": [
    {
      "description": "Upgrade conde dependencies",
      "fileMatch": [
        "./src/envs/\\w+.yaml$"
      ],
      "matchStrings": [
        "# renovate datasource=conda\\sdepName=(?<depName>.*?)\\s+- [a-z0-9]+==\"?(?<currentValue>.*)\"?"
      ],
      "datasourceTemplate": "conda"
    }
  ]
}
